# Начнём с образа Node.js
FROM node:16-alpine

# Создадим директорию для приложения
WORKDIR /app

# Скопируем зависимости
COPY package*.json ./

# Установим зависимости
RUN npm ci

# Скопируем остальные файлы в директорию приложения
COPY . .

# Установим переменную окружения для токена бота
ENV PORT=3000

EXPOSE $PORT

# Запустим приложение
CMD ["npm", "start"]
